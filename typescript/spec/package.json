{
  "name": "@spider-bytes/red-spec",
  "version": "0.0.1",
  "description": "SpiderBytes Red is a specification for standardizing storage solutions on the web. This specification is intended for client-side storage libraries (e.g. SpiderBytes Blue) to store database like types on a server.",
  "main": "src/main.ts",
  "scripts": {
    "lint": "eslint . --ext .js,.ts --max-warnings=0 --ignore-pattern=!.eslintrc.js",
    "precommit": "lint-staged"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/spider-bytes/red-spider-bytes"
  },
  "keywords": [
    "decentralized",
    "database",
    "web",
    "decentralized database",
    "decentralized web",
    "spec"
  ],
  "author": "https://github.com/spider-bytes",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/spider-bytes/red-spider-bytes/issues"
  },
  "dependencies": {
    "murmurhash": "0.0.2",
    "uuidv4": "^6.0.2"
  },
  "devDependencies": {
    "@types/murmurhash": "0.0.1",
    "@typescript-eslint/eslint-plugin": "^2.17.0",
    "@typescript-eslint/parser": "^2.17.0",
    "eslint": "^6.8.0",
    "eslint-import-resolver-typescript": "^2.0.0",
    "eslint-plugin-import": "^2.20.0",
    "eslint-plugin-json": "^2.0.1",
    "lint-staged": "^10.0.2",
    "typescript": "^3.7.5"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "npm run lint"
    ]
  }
}
